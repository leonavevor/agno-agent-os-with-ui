# Docker Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Database Configuration
# =============================================================================
DB_USER=ai
DB_PASSWORD=ai
DB_NAME=ai

# =============================================================================
# API Keys (Required)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Docker Image Configuration
# =============================================================================
IMAGE_NAME=agent-os
IMAGE_TAG=latest

# =============================================================================
# Model Configuration
# =============================================================================
OPENAI_MODEL_ID=gpt-4
OPENAI_EMBEDDER_MODEL_ID=text-embedding-3-small
ANTHROPIC_MODEL_ID=claude-sonnet-4
GOOGLE_MODEL_ID=gemini-2.0-flash-exp

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable advanced features
ENABLE_MEMORY=True
ENABLE_VECTOR_RAG=True
ENABLE_VALIDATION=True
ENABLE_SKILLS=True

# =============================================================================
# Performance Configuration
# =============================================================================
# Number of uvicorn workers (production: 4, development: 1)
WORKERS=1

# Enable hot reload (development only)
UVICORN_RELOAD=True

# =============================================================================
# Development Settings
# =============================================================================
# Print environment variables on startup (security: disable in production)
PRINT_ENV_ON_LOAD=False

# =============================================================================
# Optional: Redis Configuration (for caching)
# =============================================================================
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# =============================================================================
# Optional: Observability
# =============================================================================
# LOG_LEVEL=INFO
# ENABLE_METRICS=False
# SENTRY_DSN=
